# PawWalk Dog Walker Application Environment Configuration
# MySQL Database Configuration

# Database URL (Primary connection method)
DATABASE_URL=mysql://root:@localhost:3306/dog_walker_app

# Individual Database Parameters (Alternative configuration)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=dog_walker_app
DB_USERNAME=root
DB_PASSWORD=

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME="PawWalk Dog Walker App"

# API Configuration
API_BASE_URL=http://localhost/dgWalk/

# Email Configuration (Optional - for future features)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Security Configuration
SESSION_SECRET=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/application.log