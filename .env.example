# PawWalk Dog Walker Application Environment Configuration
# Copy this file to .env and update with your actual database credentials

# Database URL (Primary connection method)
# Replace with your actual PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/pawwalk_db

# Individual Database Parameters (Alternative configuration)
PGHOST=localhost
PGPORT=5432
PGDATABASE=pawwalk_db
PGUSER=your_username
PGPASSWORD=your_password

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME="PawWalk Dog Walker App"

# API Configuration
API_BASE_URL=http://localhost:8000/api/

# Email Configuration (Optional - for future features)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Security Configuration
SESSION_SECRET=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/application.log